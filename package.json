{
  "name": "wordle-game",
  "version": "1.0.0",
  "description": "My version of the wordle game",
  "type": "module",
  "private": true,
  "keywords": [
    "wordle",
    "algorithm",
    "puzzle",
    "solver"
  ],
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "start": "cross-env NODE_ENV=development node index.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },

  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/prop-types": "off",
      "no-unused-vars": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.4",
    "jest": "^29.7.0",
    "prettier": "^3.5.3"
  }
}
